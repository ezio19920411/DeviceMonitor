<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_ui"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.devicemeters.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="AvailMe"
        android:id="@+id/availableMemory_text"
        android:textSize="35dp"
        android:textColor="#ddfaf8"
        android:background="#00000000"
        android:paddingLeft="37dp"
        android:layout_above="@+id/txtCPU"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="17dp"
        android:layout_marginBottom="43dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MemClear"
        android:id="@+id/clearMemory_btn"
        android:textColor="#ddfaf8"
        android:textSize="20dp"
        android:background="#00000000"
        android:layout_marginTop="33dp"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="38dp"
        android:layout_below="@+id/availableStorage_text"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/availableStorage_text"
        android:textColor="#ddfaf8"
        android:textSize="25dp"
        android:textIsSelectable="false"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/txtCPU"
        android:layout_alignRight="@+id/availableMemory_text"
        android:layout_alignEnd="@+id/availableMemory_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CPU"
        android:id="@+id/txtCPU"
        android:background="#00000000"
        android:textIsSelectable="false"
        android:textSize="35dp"
        android:textColor="#ddfaf8"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"

        android:layout_alignRight="@+id/clearMemory_btn"
        android:layout_alignEnd="@+id/clearMemory_btn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Core"
        android:id="@+id/coreText"
        android:textSize="35dp"
        android:textColor="#ddfaf8"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/conbtn"
        android:layout_alignStart="@+id/conbtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ProcessList"
        android:id="@+id/plbtn"
        android:background="#00000000"
        android:textColor="#ddfaf8"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ConnectUs"
        android:id="@+id/conbtn"
        android:layout_alignBottom="@+id/plbtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="20dp"
        android:background="#00000000"
        android:textColor="#ddfaf8" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_above="@+id/txtCPU"
        android:layout_alignTop="@+id/availableMemory_text"
        android:layout_alignLeft="@+id/clearMemory_btn"
        android:layout_alignStart="@+id/clearMemory_btn"
        android:layout_alignRight="@+id/txtCPU"
        android:layout_alignEnd="@+id/txtCPU" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_marginTop="-30dp"
        android:layout_margin="-10dp"
        android:layout_marginBottom="-15dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/clearMemory_btn"
        android:layout_toEndOf="@+id/availableMemory_text"
        android:layout_marginLeft="-25dp"
        android:layout_marginRight="-15dp"
        android:layout_toRightOf="@+id/availableMemory_text" />


</RelativeLayout>
